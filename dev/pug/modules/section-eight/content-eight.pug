                                    span.ico-input
                                        img.ico-input-check(src="static/images/general/checkbox.png")
                                        img.ico-input-checked(src="static/images/general/checkbox_checked.png")
                            .contacts-form__item
                                input(type="radio", id="check2", name="rec")
                                label(for="check2") Другой вопрос
                                    span.ico-input
                                        img.ico-input-check(src="static/images/general/checkbox.png")
                                        img.ico-input-checked(src="static/images/general/checkbox_checked.png")
                        .contacts-form-wrapp
                            .contacts-form__item
                                input(type="text", placeholder="Имя", autocomplete="new-password")
